    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.12.2",
    "@types/socket.io": "^3.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
